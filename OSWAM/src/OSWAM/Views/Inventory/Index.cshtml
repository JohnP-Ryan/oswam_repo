@{
    ViewData["Title"] = "Inventory";
}

<div>
    <div class="row container-fluid">
        <div class="col-md-3">
            <h4 class="text-center">Query Inventory</h4>
        
            <form id="search-form" class="bs-example bs-example-form" data-example-id="simple-input-groups" runat="server"> 
                <div class="input-group"> 
                    <span class="input-group-addon" id="basic-addon1">Search ID</span> 
                    <input class="form-control" placeholder="B0000CDLKF" aria-describedby="basic-addon1"> 
                    </div> <br> 
                <div class="input-group"> 
                    <span class="input-group-addon" id="basic-addon2">Search Name</span> 
                    <input class="form-control" placeholder="Name" aria-describedby="basic-addon2"> 
                    </div> <br> 
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon3">Weight</span>
                    <input class="form-control" placeholder="From" aria-describedby="basic-addon3" />
                    <input class="form-control" placeholder="To" aria-describedby="basic-addon4"/>
                    </div> <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon3">Price</span>
                    <input class="form-control" placeholder="From" aria-describedby="basic-addon5" />
                    <input class="form-control" placeholder="To" aria-describedby="basic-addon6" />
                </div> <br />

            </form>
        
        </div>

        <div class="col-md-6 divider-vertical-right divider-vertical-left">
        -----SQL Table Filler----
            <br /><br /><br /><br />
            <br /><br /><br /><br />
            <br /><br /><br /><br />
            <br /><br /><br /><br />
            <br /><br /><br /><br />
            <br /><br /><br /><br />
            <br /><br /><br /><br />
        
        </div>

        <div class="col-md-3">
            <h4 class="text-center">Item Details</h4>
            <ul class="list-group">
                <li class="list-group-item">
                    <span class="badge">B0000CDLKF</span>
                    ID</li>
                <li class="list-group-item">
                    <span class="badge">Best CD Ever</span>
                    Name</li>
                <li class="list-group-item">
                    <span class="badge">0.14 pounds</span>
                    Weight</li>
                <li class="list-group-item">
                    <span class="badge">5"</span>
                    Length</li>
                <li class="list-group-item">
                    <span class="badge">6"</span>
                    Width</li>
                <li class="list-group-item">
                    <span class="badge">0.25"</span>
                    Height
                </li>
                <li class="list-group-item">
                    <span class="badge">14</span>
                    Quantity
                </li>
                <li class="list-group-item">
                    <span class="badge">$14.99</span>
                    Price
                </li>
            </ul>
        </div>

    </div>
</div>
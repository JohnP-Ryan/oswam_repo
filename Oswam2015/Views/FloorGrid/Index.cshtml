                //drawCells();
            }

            function handleClick(e) {
                context.fillStyle = "black";

                context.fillRect(Math.floor(e.offsetX / cellSizePx) * cellSizePx,
                  Math.floor(e.offsetY / cellSizePx) * cellSizePx,
                  cellSizePx, cellSizePx);
            }
        })();
    </script>
}
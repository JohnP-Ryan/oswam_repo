@model IEnumerable<Oswam2015.Models.GetOrders_Result>
@{
    ViewData["Title"] = "Orders";
    ViewBag.Page = "Orders";

    WebGrid grid = new WebGrid(Model, rowsPerPage: 35);
}

<div class="row">
    <!--Hiding Panel Nav bar-->
    <div class="col-lg-8">
        <div class="container-fluid">
            <ul class="nav nav-tabs nav-justified nav-divider">
                <li><asp:Button runat="server" OnClientClick="showPanel('first'); return false;" class="btn btn-primary btn-block">In Progress</asp:Button></li>
                <li><button type="button" class="btn btn-primary btn-block showWaiting">Waiting</button></li>
                <li><button type="button" class="btn btn-primary btn-block showFulfilled">Fulfilled</button></li>
            </ul>
        </div>
        <br />
        <!--Panel In Progress-->
        <div class="panel panel-default" id="dvFirstDiv" style="display: block;">
            <div class="panel-heading">
                <h4 class="panel-title">
                    In Progress
                </h4>
            </div>
            <div id="panelProgress">
                <div class="panel-body">
                    Striped List Group
                </div>
            </div>
        </div>
        <!--Panel Waiting-->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    Waiting
                </h4>
            </div>
            <div id="panelWaiting">
                <div class="panel-body">
                    Striped List Group
                </div>
            </div>
        </div>
        <!--Panel Fulfilled-->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    Fulfilled
                </h4>
            </div>
            <div id="panelFulfilled">
                <div class="panel-body">
                    Striped List Group
                </div>
            </div>
        </div>
    </div>      
    <!--Right Hand Details Column (size 4)-->
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="text-center">Order Details</h4>
            </div>
            <div class="panel-body">
                <ol class="list-group">
                    <li class="list-group-item">
                        <span class="badge">B0000CDLKF</span>
                        Best CD Ever
                    </li>
                    <li class="list-group-item">
                        <span class="badge">B00EHZYWGM</span>
                        AmazonBasics Portable Bluetooth Speaker - Black
                    </li>
                    <li class="list-group-item">
                        <span class="badge">B00KMF2MZO</span>
                        Galaxy S5 Screen Protector
                    </li>
                    <li class="list-group-item">
                        <span class="badge">B01EFKSCP0</span>
                        PopSockets: Expanding Stand
                    </li>
                </ol>

                <ul class="list-group">
                    <li class="list-group-item">
                        <span class="badge">$56.07</span>
                        Total Price
                    </li>
                    <li class="list-group-item">
                        <span class="badge">3.14 Pounds</span>
                        Total Weight
                    </li>
                </ul>
            </div>
        </div>
        
    </div>
</div>

<script type="text/javascript">
    function ToggleDiv(Flag) {
        alert("Hello! I am an alert box!!");
        if (Flag == "first") {
            alert("clicked first");
            document.getElementById('dvFirstDiv').style.display = 'block';
            document.getElementById('dvSecondDiv').style.display = 'none';
        }
        else {
            document.getElementById('dvFirstDiv').style.display = 'none';
            document.getElementById('dvSecondDiv').style.display = 'block';
        }
    }
</script>

